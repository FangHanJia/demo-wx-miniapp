/**index.wxss**/
.index-wrap{
  height: 100%;
  padding-top: 90rpx;
  position: relative;
}
.tab_header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
}
.tab_header .tab_text{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#AAAAAA;
  line-height:90rpx;
}
.tab_header .actived{
  color: #FF4D4F;
  border-bottom: 4rpx solid #FF4D4F; 
}
.index_main{
  height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
  background: #F6F6F6;
  box-sizing: border-box;
}
.index_main .main_list_item{
  width:686rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow:0rpx 1rpx 3rpx 0rpx rgba(0,0,0,0.05);
  border-radius:30rpx;
  margin-bottom:40rpx;
  overflow: hidden; 
}
.index_main .main_list_item:nth-child(1){
  margin-top:40rpx; 
}
.index_main .main_list_item .goods_info{
  height: 857rpx;
  border-bottom: 1rpx solid #EBEBEB;
  padding: 0 48rpx; 
}
.index_main .main_list_item .goods_info .user_info{
  height: 150rpx;
  display: flex;
  align-items: center;
}
.index_main .main_list_item .goods_info .user_info .info_img{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.index_main .main_list_item .goods_info .user_info .info_name{
  flex: 1;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:bold;
  color:#000;
  line-height:42rpx;
}
.index_main .main_list_item .goods_info .user_info .info_append{
  text-align: center;
  width:120rpx;
  height:40rpx;
  border-radius:6rpx;
  border:2rpx solid #FF4D4F;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,77,79,1);
  line-height:40rpx;
}
.index_main .main_list_item .goods_info .goods_img{
  width: 590rpx;
  height: 590rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.index_main .main_list_item .goods_info .goods_describe{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.index_main .main_list_item .goods_price{
  height: 86rpx;
  line-height: 86rpx;
  text-align: right;
  padding-right: 48rpx;
}
.index_main .main_list_item .goods_price .price_wrap{
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#000;
}
.index_main .main_list_item .goods_price .price_wrap .price_collage{
  font-size:34rpx;
  font-weight:bold;
  color:#FF3546;
}
